@inject IStringLocalizer<SharedResource> L

@using Travaloud.Infrastructure.Common

<EditForm @ref="EditForm" Model="@RequestModel" OnValidSubmit="SaveAsync" Context="editContext">
    <MudDialog>
        <TitleContent>
            <MudText Typo="Typo.h6">
                @if (IsCreate)
                {
                    <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                    @($"{L["Create"]} "); @L["Supplier Contact"];
                }
                else
                {
                    <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                    @($"{L["Edit"]} "); @L["Supplier Contact"]
                }
            </MudText>
        </TitleContent>

        <DialogContent>
             <FluentValidationValidator @ref="_fluentValidationValidator"/>

            <MudGrid>
                <MudItem xs="12" md="12">
                    <MudTextField Label="@L["Name"]" For="@(() => RequestModel.Name)" @bind-Value="RequestModel.Name" Required="true" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Label="@L["Address"]" For="@(() => RequestModel.Address)" @bind-Value="RequestModel.Address" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Label="@L["City"]" For="@(() => RequestModel.City)" @bind-Value="RequestModel.City" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Label="@L["Email Address"]" For="@(() => RequestModel.EmailAddress)" @bind-Value="RequestModel.EmailAddress" Variant="Variant.Outlined" Required="true" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Label="@L["Contact Number"]" For="@(() => RequestModel.ContactNumber)" @bind-Value="RequestModel.ContactNumber" Variant="Variant.Outlined" Required="true" />
                </MudItem>
                <MudItem xs="12" md="12">
                    <MudInputLabel Class="mb-3">@L["Description"]</MudInputLabel>
                    <MudExRichTextEdit @bind-Value="RequestModel.Description" For="@(() => RequestModel.Description)" BackgroundColor="MudExColor.Transparent" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel" StartIcon="@Icons.Material.Filled.Cancel">@L["Cancel"]</MudButton>
            <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success" StartIcon="@Icons.Material.Filled.Save">@L["Confirm"]</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>
