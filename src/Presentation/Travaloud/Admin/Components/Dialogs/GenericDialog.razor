@inject IStringLocalizer<GenericDialog> L

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.CrisisAlert" Class="mr-3 mb-n1" />
            @L[TitleText]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>
            @if (ContentText != null)
            {
                @((MarkupString) ContentText)
            }
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton StartIcon="@Icons.Material.Filled.Check" Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">@L["Ok"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public string? ContentText { get; set; }

    [Parameter]
    public string TitleText { get; set; } = default!;

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
    void Cancel() => MudDialog.Cancel();
}