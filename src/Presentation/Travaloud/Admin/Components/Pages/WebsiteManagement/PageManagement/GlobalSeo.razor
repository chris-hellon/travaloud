@page "/management/page-management/global-seo"
@using Travaloud.Application.Catalog.Interfaces

@inject IStringLocalizer<GlobalSeo> L
@inject IPagesService PagesService

<TravaloudPageTitle Title="@L["Global SEO"]" Description="@L["Manage Global SEO"]"/>

<MudTabs Elevation="25" Color="Color.Transparent" Rounded="true" PanelClass="mt-6">
    <MudTabPanel Text="@L["Breadcrumbs"]">
        <MudGrid>
            <MudItem xs="12" sm="12" md="12">
                <MudCard Elevation="25">
                    <MudCardContent>
                        <MudTextField T="string" Lines="10" Variant="Variant.Outlined" @bind-Value="@_inputModel.Breadcrumbs" For="@(() => _inputModel.Breadcrumbs)" AutoGrow HelperText="Please ensure you wrap the markup in <script> tags"/>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Save" OnClick="UpdateSeoAsync">
                            @L["Save"]
                        </MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        </MudGrid>
    </MudTabPanel>
    <MudTabPanel Text="@L["Search"]">
        <MudGrid>
            <MudItem xs="12" sm="12" md="12">
                <MudCard Elevation="25">
                    <MudCardContent>
                        <MudTextField T="string" Lines="10" Variant="Variant.Outlined" @bind-Value="@_inputModel.SearchAction" For="@(() => _inputModel.SearchAction)" AutoGrow HelperText="Please ensure you wrap the markup in <script> tags"/>
                    </MudCardContent>
                    <MudCardActions Class="d-flex justify-center">
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Save" OnClick="UpdateSeoAsync">
                            @L["Save"]
                        </MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        </MudGrid>
    </MudTabPanel>
</MudTabs>