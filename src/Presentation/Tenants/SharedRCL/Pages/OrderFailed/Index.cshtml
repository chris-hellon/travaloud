@page "/order-failed"
@model Travaloud.Tenants.SharedRCL.Pages.OrderFailed.IndexModel

<section id="getInTouch" class="bg-light overflow-hidden position-relative">
    <div class="container-fluid">
        <div class="container pt-8 pb-8">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-8 has-parallax-scroll">
                    <h1 class="display-3 mb-4 text-center">Order Failed</h1>
                    <p class="mb-0 text-center">Unfortunately your order has not been succesful.</p>
                    <div class="card mt-5">
                        <div class="card-body p-5">
                            <p>Your payment has been refunded.</p>
                            <p>Please attempt your order again, or contact us for assistance.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>