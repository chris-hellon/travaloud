@page "/error/{statusCode?}"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Travaloud.Tenants.SharedRCL.Pages.Error.IndexModel

@{
    ViewData["Title"] = "Error";
}

<section id="error" class="bg-light">
    <div class="container-fluid">
        <div class="container pt-8 pb-8">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-6" data-mdb-toggle="animation" data-mdb-animation-start="onLoad" data-mdb-animation-on-scroll="once" data-mdb-animation="fade-in" data-mdb-animation-delay="1200" data-mdb-animation-duration="900">

                    <div class="d-flex justify-content-center align-content-center">
                        <i class="fas fa-desktop mb-5 d-flex justify-content-center align-content-center"></i>
                        <span class="position-absolute">@((Model.StatusCodeValue.HasValue ? $"{Model.StatusCodeValue.Value.ToString()}" : ""))</span>
                    </div>
                    <h1 class="display-3 mb-4">@ViewData["Title"]</h1>
                    <p>@Model.ExceptionMessage</p>
                    <a class="btn btn-primary mt-5" asp-page="/Home/Index">GO HOME</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style type="text/css">
        #error i {
            font-size: 5rem;
        }

        #error span {
            top: 12px;
        }
    </style>
}