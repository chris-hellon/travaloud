@model Travaloud.Application.Basket.Dto.BasketItemRoomModel

<div class="row mb-4 d-flex justify-content-between align-items-center propertyRoomBasketItem" data-id="@Model.Id">
    <div class="col-lg-2 basketItemImage">
        <img src="@Model.PropertyImageUrl" class="img-fluid rounded-3" alt="@Model.PropertyName">
    </div>
    <div class="col-lg-@(Model.IsConfirmationPage ? "4" : "3") col-6 mt-lg-0 mt-2 mb-lg-0 mb-3">
        <h6 class="text-muted">@Model.PropertyName</h6>
        <h6 class="text-black mb-0">@Model.CheckInDateParsed.ToShortDateString() - @Model.CheckOutDateParsed.ToShortDateString()</h6>
    </div>
    <div class="col-lg-4 col-6 text-end">
        <h6 class="text-muted">@Model.RoomTypeName</h6>
        <h6 class="text-black mb-0">@($"{Model.RoomQuantity} {(Model.IsShared ? "Beds" : "Rooms")}")</h6>
    </div>
    <div class="col-lg-2 col-5 text-lg-end">
        <h6 class="mb-0">$ @string.Format("{0:n2}", Model.RoomRate * Model.RoomQuantity)</h6>
    </div>
    
    @if (!Model.IsConfirmationPage)
    {
        <div class="col-lg-1 col-2 text-end">
            <span class="text-muted cursor-pointer" onclick="removeRoomFromBasket('@Model.PropertyId', '@Model.Id');"><i class="fas fa-times"></i></span>
        </div>
    }
</div>

<hr class="my-4 propertyRoomBasketItemSpacer" data-id="@Model.Id" />