@model Travaloud.Tenants.SharedRCL.Models.WebComponents.ContactComponent

<form method="post" id="contact-form">
    <div asp-validation-summary="ModelOnly" class="travaloud-validation"></div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Name input -->
            <div class="form-outline mb-4 mt-4" data-mdb-input-init>
                <input asp-for="Name" class="form-control" autocomplete="username" aria-required="true"/>
                <label asp-for="Name" class="form-label"></label>
            </div>
            <span asp-validation-for="Name" class="travaloud-validation"></span>
        </div>
        <div class="col-lg-12">
            <!-- Email input -->
            <div class="form-outline mb-4" data-mdb-input-init>
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true"/>
                <label asp-for="Email" class="form-label"></label>
            </div>
            <span asp-validation-for="Email" class="travaloud-validation"></span>
        </div>
        <div class="col-lg-12">
            <!-- Email input -->
            <div class="form-outline mb-4" data-mdb-input-init>
                <input asp-for="ContactNumber" class="form-control" autocomplete="username" aria-required="true"/>
                <label asp-for="ContactNumber" class="form-label"></label>
            </div>
            <span asp-validation-for="ContactNumber" class="travaloud-validation"></span>
        </div>
        <div class="col-lg-12 mb-4">
            <select data-mdb-select-init asp-for="RelatedProperty">
                <option value="" hidden selected></option>
                @if (Model.Properties != null)
                {
                    foreach (var property in Model.Properties)
                    {
                        <option value="@property.Name">@property.Name</option>
                    }
                }
            </select>
            <label class="form-label select-label">Related Hostel</label>
        </div>
        <div class="col-lg-12 mb-4">
            <select data-mdb-select-init asp-for="RelatedTour">
                <option value="" hidden selected></option>
                @if (Model.Tours != null)
                {
                    foreach (var tour in Model.Tours)
                    {
                        <option value="@tour.Name">@tour.Name</option>
                    }
                }
            </select>
            <label class="form-label select-label">Related Tour</label>
        </div>
        <div class="col-lg-12">
            <!-- Message input -->
            <div class="form-outline mb-4" data-mdb-input-init>
                <textarea asp-for="Message" class="form-control" rows="4" style="height:129px"></textarea>
                <label asp-for="Message" class="form-label"></label>
            </div>
            <span asp-validation-for="Message" class="travaloud-validation"></span>
        </div>
        <div class="col-lg-12 mb-4">
            <recaptcha/>
        </div>
        <input asp-for="HoneyPot" class="d-none"/>
    </div>
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary d-block w-100">Send Message</button>
</form>