@model Travaloud.Infrastructure.Multitenancy.TenantWebsite.TravaloudThemeSettings

<style type="text/css">
    :root {
        --mdb-primary: @Model.PrimaryColor;
        --mdb-secondary: @Model.SecondaryColor;
        --mdb-body-font-family: @Model.BodyFont;
        --mdb-headings-font-family: '@Model.HeaderFont';
        --mdb-button-font-family: '@Model.ButtonFont';
