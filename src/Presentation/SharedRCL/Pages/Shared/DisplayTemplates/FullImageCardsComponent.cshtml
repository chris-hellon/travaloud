@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Travaloud.Tenants.SharedRCL.Models.WebComponents.FullImageCardsComponent


@{
    if (Model.Cards.Any())
    {
        var splitCards = Helpers.SplitList<CardComponent>(Model.Cards);

        if (splitCards.Any())
        {
            @if (Model.Title != null)
            {
                <h3 class="mb-5"><strong>@Model.Title</strong></h3>
            }

            foreach (var splitCard in splitCards)
            {
                var lgClass = splitCard.Count == 3 ? 4 : 6;

                <div class="row">
                    @foreach (var card in splitCard)
                    {
                        card.LgClass = lgClass;

                        <partial name="_FullImageCardPartial" model="card" />
                    }
                </div>
            }
        }
    }

}